<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbdog.demo.mapper.RoleMapper">
<!--<cache eviction="LRU" type="org.mybatis.caches.memcached.MemcachedCache"/>-->
<resultMap id="RoleMap" type="com.bbdog.demo.entity.Role">
	<result column="NAME" jdbcType="VARCHAR" property="name"/>
	<result column="ID" jdbcType="DECIMAL" property="id"/>
	<result column="VERSION" jdbcType="DECIMAL" property="version"/>
	<result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime"/>
	<result column="UPDATE_TIME" jdbcType="TIMESTAMP" property="updateTime"/>
</resultMap>
<sql id="Base_Column_List">
	NAME,ID,VERSION,CREATE_TIME,UPDATE_TIME
</sql>
<sql id="sr_Base_Column_List">
	sr.NAME,sr.ID,sr.VERSION,sr.CREATE_TIME,sr.UPDATE_TIME
</sql>
<select id="get" parameterType="long" resultMap="RoleMap">
	select
		<include refid="Base_Column_List"/>
	from sys_role sr
	where ID = #{id,jdbcType=DECIMAL}
</select>
<delete id="delete" parameterType="long">
	delete
	from sys_role sr
	where ID = #{id,jdbcType=DECIMAL}
</delete>
<insert id="insert" parameterType="com.bbdog.demo.entity.Role">
	insert into sys_role(
		<include refid="Base_Column_List"/>
	) values (
	#{name,jdbcType=VARCHAR},
	#{id,jdbcType=DECIMAL},
	#{version,jdbcType=DECIMAL},
	#{createTime,jdbcType=TIMESTAMP},
	#{updateTime,jdbcType=TIMESTAMP}
	)
</insert>
<update id="update" parameterType="com.bbdog.demo.entity.Role">
	update sys_role sr
	<set>
		VERSION = VERSION + 1
		<if test="name != null">
		,NAME = #{name,jdbcType=VARCHAR}
		</if>
		<if test="createTime != null">
		,CREATE_TIME = #{createTime,jdbcType=TIMESTAMP}
		</if>
		<if test="updateTime != null">
		,UPDATE_TIME = #{updateTime,jdbcType=TIMESTAMP}
		</if>
	</set>
	where ID = #{id,jdbcType=DECIMAL} and version = #{version,jdbcType=DECIMAL}
</update>
<select id="findListForExample" parameterType="com.bbdog.demo.entity.Role" resultMap="RoleMap">
	select
	<include refid="sr_Base_Column_List"/>
	from sys_role sr
	<include refid="common_query_condition"/>
</select>
<select id="findListForMap" parameterType="map" resultMap="RoleMap">
	select
	<include refid="sr_Base_Column_List"/>
	from sys_role sr
	<include refid="common_query_condition"/>
</select>
<sql id="common_query_condition">
	<where>
		<if test="name != null">
		AND sr.NAME LIKE CONCAT('%',#{name},'%')
		</if>
		<if test="id != null">
		AND sr.ID = #{id}
		</if>
		<if test="version != null">
		AND sr.VERSION = #{version}
		</if>
		<if test="createTimeBegin != null">
		<![CDATA[AND sr.CREATE_TIME >= STR_TO_DATE(#{createTimeBegin},'%Y-%m-%d %H:%i:%s')]]>
		</if>
		<if test="createTimeEnd != null">
		<![CDATA[AND sr.CREATE_TIME <= STR_TO_DATE(#{createTimeEnd},'%Y-%m-%d %H:%i:%s')]]>
		</if>
		<if test="updateTimeBegin != null">
		<![CDATA[AND sr.UPDATE_TIME >= STR_TO_DATE(#{updateTimeBegin},'%Y-%m-%d %H:%i:%s')]]>
		</if>
		<if test="updateTimeEnd != null">
		<![CDATA[AND sr.UPDATE_TIME <= STR_TO_DATE(#{updateTimeEnd},'%Y-%m-%d %H:%i:%s')]]>
		</if>
	</where>
</sql>
</mapper>
