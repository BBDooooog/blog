    <!-- 异步执行配置 -->
    <beans:bean id="b2cexecuter" class="java.util.concurrent.Executors" factory-method="newFixedThreadPool">
        <beans:constructor-arg value="10" />
    </beans:bean>
    <task:executor id="threadPoolTaskExecutor" pool-size="10" queue-capacity="2000"/>
    <task:annotation-driven executor="b2cexecuter" />


    <beans:bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <beans:property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
        <beans:property name="ignoreResourceNotFound" value="true" />
        <beans:property name="locations" >
